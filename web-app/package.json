{
  "name": "mergin",
  "private": true,
  "workspaces": [
    "packages/lib",
    "packages/admin-lib",
    "packages/app",
    "packages/admin-app",
    "packages/*"
  ],
  "scripts": {
    "serve": "yarn workspace @mergin/app serve",
    "serve:prod": "yarn workspace @mergin/app serve:prod",
    "serve:admin": "yarn workspace @mergin/admin-app serve",
    "serve:admin:prod": "yarn workspace @mergin/admin-app serve:prod",
    "build:all": "yarn build:libs:prod && yarn build",
    "build:all:dev": "yarn build:libs && yarn build:dev",
    "build:all:admin": "yarn build:libs:prod && yarn build:admin",
    "build:all:admin:dev": "yarn build:libs && yarn build:admin:dev",
    "build:libs": "yarn workspaces run clean && yarn workspaces run build:lib:all",
    "build:libs:noadmin": "yarn clean:libs:noadmin && yarn workspace @mergin/lib build:lib:all",
    "build:libs:prod": "yarn workspaces run clean && yarn workspaces run build:lib:all:prod",
    "build": "yarn workspace @mergin/app build",
    "build:dev": "yarn workspace @mergin/app build:dev",
    "build:admin": "yarn workspace @mergin/admin-app build",
    "build:admin:dev": "yarn workspace @mergin/admin-app build:dev",
    "clean:libs": "yarn workspace @mergin/lib clean && yarn workspace @mergin/admin-lib clean",
    "clean:libs:noadmin": "yarn workspace @mergin/lib clean",
    "i18n:report": "yarn workspace @mergin/app 18n:report",
    "types:libs": "yarn workspaces run build:types",
    "types:lib": "yarn workspace @mergin/lib build:types",
    "types:admin-lib": "yarn workspace @mergin/admin-lib build:types",
    "watch:lib": "yarn workspace @mergin/lib build:lib:watch",
    "watch:admin-lib": "yarn workspace @mergin/admin-lib build:lib:watch",
    "lint:all": "yarn workspaces run lint"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-babel": "~5.0.4",
    "@vue/cli-plugin-e2e-cypress": "~5.0.4",
    "@vue/cli-plugin-eslint": "^5.0.4",
    "@vue/cli-plugin-unit-jest": "~5.0.4",
    "@vue/cli-service": "^5.0.4",
    "@vue/eslint-config-standard": "^6.1.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "1.0.0-beta.30",
    "adm-zip": "^0.5.9",
    "babel-jest": "^27.5.1",
    "buffer": "^6.0.3",
    "chalk": "^4.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.3.1",
    "cypress-file-upload": "^5.0.8",
    "cypress-image-snapshot": "^4.0.1",
    "cypress-qase-reporter": "^1.4.1",
    "dotenv": "^14.3.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^7.20.0",
    "https-browserify": "^1.0.0",
    "jest": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "prettier": "2.6.0",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "sass": "^1.32.13",
    "sass-loader": "^12.6.0",
    "smtp-tester": "1.2.0",
    "stream-http": "^3.2.0",
    "tsc-alias": "^1.5.0",
    "typescript": "~4.5.5",
    "url": "^0.11.0",
    "vue-cli-plugin-i18n": "~2.3.1",
    "vue-cli-plugin-vuetify": "~2.4.8",
    "vue-template-compiler": "^2.5.17",
    "vue-tsc": "^0.34.11",
    "vue-typegen": "^0.2.0",
    "vue-world-map": "^0.1.1",
    "vuetify-loader": "^1.7.3",
    "webpack-node-externals": "^3.0.0"
  },
  "version": "0.0.0"
}
